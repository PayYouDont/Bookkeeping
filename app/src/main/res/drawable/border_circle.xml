<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"><!--边框角度 -->
            <corners android:radius="10dip" /><!--外边框颜色-->
            <solid android:color="#6DFFFFFF" />
        </shape>
    </item>
    <!--离边框的厚度-->
    <item
            android:bottom="0.1dp"
            android:left="0.1dp"
            android:right="0.1dp"
            android:top="0.1dp">
        <shape android:shape="oval"><!--边框角度-->
            <corners android:radius="1dp" /><!--外边框颜色，这个为内部颜色-->
            <solid android:color="#80FF0000" />
        </shape>
    </item>
</layer-list>